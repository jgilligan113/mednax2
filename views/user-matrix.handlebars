<div class="container">
    <h4 class="light" style="padding:20px;">The Matrix</h4>
    <div class='row' id="toolbar">
        <div class='col s3'>
        {{#if admin}}<a class="left waves-effect waves-light btn center-align" href='/matrix'>Update Matrix</a>{{/if}}
        </div>
    </div>
    
    <div class='row card z-depth-3' style='overflow: auto !important;'>          
        <table class="bordered striped centered responsive">
            <thead>
                <tr>
                    <th>Pos</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Sat/Sun</th>
                    <th>Person</th>
                </tr>
            </thead>
            <tbody>
                {{#each row}}
                <tr>
                    <td>{{this.Pos}}</td>
                    <td>{{this.Mon}}</td>
                    <td>{{this.Tues}}</td>
                    <td>{{this.Wed}}</td>
                    <td>{{this.Thur}}</td>
                    <td>{{this.Fri}}</td>
                    <td>{{this.SatSun}}</td>
                    <td>{{User.first_name}}</td>
                </tr>
                {{/each}}  
            </tbody>
        </table>
    </div>
</div>